import  BasePage from "../../../page-objects/hometasks-tests/ui-tests/basePage"
import  ResultPage from "../../../page-objects/hometasks-tests/ui-tests/resultPage"


describe('REQ_01: User is able to add single and multi and multiple color product to the card', () => {

    beforeEach(() => {
        cy.fixture('singleColorProduct').then(data => {
            cy.wrap(data).as('productData')
        })
    })

    it('Positive: User is able to add single color product to the card', () => {
        cy.get('@productData').then((productData) => {
            cy.log("GIVEN User is at Accessories Page")
            BasePage.open();
            cy.log("WHEN User performs search product by name")
            BasePage.performSearch(productData.name)

        })
    })
})